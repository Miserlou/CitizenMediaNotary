{
    "type": "object",
    "description": "A schema for documents to be validated.",
    "optional": false,
    "name": "Recording",
    "properties": {
        "filename": {
            "type": "string",
            "description": "Recording filename",
            "optional": false
        },
        "hash": {
            "description": "Hash of file",
            "type": "string",
            "optional": false
        },
        "hashAlgorithm": {
            "description": "Hash algorithm",
            "type": "string",
            "default": "SHA1",
            "optional": false
        },
        "time": {
            "description": "Reported time of recorded incident in UTC format.",
            "type": "string",
            "optional": false,
            "format": "date-time"
        },
        "description": {
            "description": "Description of the file.",
            "type": "string",
            "optional": true
        },
        "size": {
            "description": "Size of file, in bytes.",
            "type": "string",
            "optional": false
        },
        "latitude": {
            "description": "GPS Latitude",
            "type": "float",
            "optional": true
        },
        "longitude": {
            "description": "GPS Longitude",
            "type": "float",
            "optional": true
        },
        "deviceID": {
            "description": "Uniquely identifying information of capturing device.",
            "type": "string",
            "optional": true
        },
        "operatingSystem": {
            "description": "Operating system of capturing device.",
            "type": "string",
            "optional": true
        },
        "software": {
            "description": "Software which captured the recording.",
            "type": "string",
            "optional": true
        },
        "softwareVersion": {
            "description": "Recording software version.",
            "type": "string",
            "optional": true
        }
    }
}